<div class="row"> 
    <div class="col-4">
        <div class="search-input bg-light">
            <form class="form-inline" action="/stores/search" action="GET">
                <div class="form-group" id="search-controls">
                    <input type="text" class="form-control m-2" id="search-input" name="location" placeholder="City, State, Zip...">
                    <button type="submit" class="btn btn-primary m-2">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        
        <div class="search-results mb-5">
            <% shopData.shops.forEach(function (shop) { %>
                <div class="card m-2">
                    <div class="card-body">
                        <h4 class="card-title d-inline-block"><%= shop.name %></h4>
                        <p class="card-subtitle text-muted mb-4"><%= shop.address %></p>
                        <a class="card-link" href="search/<%= shop.id %>">
                            <i class="fas fa-angle-double-right mr-1"></i>Learn More
                        </a>
                        <a class="card-link" href="<%= shop.url %>" target="blank">
                            <i class="fas fa-link mr-1"></i>Website
                        </a>
                        <form action="/profile/add/<%= shop.id %>" method="POST" class="heart">
                            <input hidden name="name" value="<%= shop.name %>">
                            <input hidden name="city" value="<%= shop.city %>">
                            <input hidden name="state" value="<%= shop.country.name %>">
                            <input hidden name="ravId" value="<%= shop.id %>">
                            <button type="submit" class="btn btn-primary m-2">
                                <i class="far fa-heart" href="#"></i>
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="hide-footer bg-light"></div>

    </div>
    <div class="col-8">
        <div id="map"></div>
    </div>
</div>

<script>
    const shops = <%- JSON.stringify(shopData.shops)%>
</script>

<script src="/js/app.js"></script>